$(window).scroll(function () {
    var nav_class = $('#pt-product header.mainmenu ').attr('class');

    $('.stick.nav-pinned').attr('style');

    if (nav_class.indexOf("headroom--pinned") >= 0) {
        $('.product-right-rail .stick').addClass('nav-pinned');
        $('.product-right-rail .stick').removeClass('headroom_hidden')
        $('.product-right-rail .stick').removeClass('nav-default_state');

    } else if (nav_class.indexOf("headroom--not-top") >= 0) {
        $('.product-right-rail .stick').addClass('headroom_hidden')
        $('.product-right-rail .stick').removeClass('nav-pinned');
        $('.product-right-rail .stick').removeClass('nav-default_state');

    } else if (nav_class.indexOf("headroom--top") >= 0) {
        $('.product-right-rail .stick').removeClass('headroom_hidden')
        $('.product-right-rail .stick').removeClass('nav-pinned');
        $('.product-right-rail .stick').addClass('nav-default_state');
    } else {
        return;
    }
});